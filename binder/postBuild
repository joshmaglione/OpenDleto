#!/bin/bash
set -ex

echo "=== Installing Julia packages ==="
julia --project=@. -e 'using Pkg; Pkg.instantiate(); Pkg.build("IJulia"); Pkg.precompile()'

echo "=== Installing Julia kernel for Jupyter ==="
julia -e 'using IJulia; IJulia.installkernel("Julia", "--project=/home/jovyan")'

echo "=== Binder setup complete ==="